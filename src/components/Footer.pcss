.root {
  -post-padding: 0 5%;
  -post-box: default left center;
  border-top: 1px solid rgba(#fff, .1);
}

.nav {
  -post-box: default right center;
  flex-grow: 1;
}

.monogram {
  -post-box: default;
  -post-size: auto 20px;
  -post-transition: opacity .2s ease-out;

  & svg {
    -post-size: auto 100%;
  }

  &:hover {
    opacity: .6;
  }
}

.button {
  -post-size: 20px;
  -post-transition: all .2s ease-out;
  -post-space-between: 10px;
  background: transparent;
  display: block;

  & svg {
    -post-size: 100%;
  }

  &:hover {
    opacity: .6;
  }
}

.root {
  -post-padding: 20px 20px;
  -post-box: default left center;
}

.nav {
  -post-box: default right center;
  flex-grow: 1;
}

.button {
  -post-size: 20px;
  -post-transition: all .2s ease-out;
  -post-space-between: 10px;
  background: transparent;
  display: block;

  & svg {
    -post-size: 100%;
  }

  &:hover {
    opacity: .6;
  }
}
